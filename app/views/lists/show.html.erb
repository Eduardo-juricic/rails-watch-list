



<div class="container">
<h1 class="mb-3 text-center mt-4">Filmes da Lista <%= @list.name %>:</h2>
<div class="text-center mt-4 mb-4">
  <%= link_to "âž• Adicionar Filme", new_list_bookmark_path(@list), class: "btn btn-primary btn-lg" %>
</div>

<div class="text-center mb-4">
  <%= link_to "ðŸ”™ Voltar", lists_path, class: "btn btn-secondary btn-lg" %>
</div>


  <div class="row">
  <% @list.bookmarks.each do |bookmark| %>
    <div class="col-md-6">
      <div class="card-product mb-3">
        <img src="<%= bookmark.movie.poster_url %>" alt="<%= bookmark.movie.title %>">
        <div class="card-product-infos">
          <h2><%= bookmark.movie.title %></h2>
          <p><%= bookmark.comment %></p>
        </div>
        <div class="card-product-footer d-flex justify-content-between">
          <a href="<%= bookmark.movie.streaming %>" class="btn btn-info btn-sm butao" target="_blank" rel="noopener noreferrer">
            <i class="fas fa-tv"></i> <%= bookmark.movie.streaming %>
          </a>
          <%= link_to "Remover", bookmark_path(bookmark),
            data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to remove?" },
            class: "btn btn-danger btn-sm butao" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
