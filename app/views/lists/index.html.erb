<div class="card-category mb-4" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://t2.tudocdn.net/323425?w=1000&fit=clip)">
<h1 class="text-center my-4">Minhas Listas</h1>
</div>



<div class="container">
  <div class="row g-4">
    <% @lists.each do |list| %>
      <div class="col-md-4">
        <div class="card list-card shadow-sm h-100">
          <%= link_to list_path(list), class: "text-decoration-none d-block h-100" do %>
            <% if list.movies.any? %>
              <div class="card-img-wrapper">
                <img src="<%= list.movies.first.poster_url %>" class="card-img-top list-image" alt="<%= list.name %>">
              </div>
            <% else %>
              <div class="card-img-wrapper">
                <img src="https://novabrasilfm.com.br/app/uploads/2024/06/Cinema.jpg" class="card-img-top list-image" alt="Imagem Padrão">
              </div>
            <% end %>
            <div class="card-body d-flex flex-column align-items-center justify-content-center text-center">
              <h5 class="card-title fw-bold text-white bg-dark p-2 w-100"><%= list.name %></h5>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>


<div class="text-center mt-4">
  <%= link_to "➕ Criar Nova Lista", new_list_path, class: "btn btn-primary btn-lg px-4" %>
</div>
