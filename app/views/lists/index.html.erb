<h1 class="text-center my-4">📜 Minhas Listas</h1>

<div class="container">
  <div class="row g-4">
    <% @lists.each do |list| %>
      <div class="col-md-4">
        <div class="card mb-4 shadow-sm h-100 d-flex align-items-center justify-content-center text-center">
          <%= link_to list_path(list), class: "text-decoration-none" do %>
            <div class="card-body text-center">
              <h5 class="card-title"><%= list.name %></h5>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="text-center mt-4">
  <%= link_to "➕ Criar Nova Lista", new_list_path, class: "btn btn-primary btn-lg"%>
</div>
